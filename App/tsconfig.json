{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": ".out",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "allowJs": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    ".out",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
