{
  "compilerOptions": {
    "outDir": ".out",
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "removeComments": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "declaration": false,
    "strict": true
  },
  "exclude": [
    "node_modules",
    ".out",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}